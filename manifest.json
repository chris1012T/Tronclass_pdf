{
    "name": "Tronclass pdf (原iClass get pdf)",
    "description": "本插件可以PDF格式下載Tronclass(iClass)上大多數檔案，已適用2023更新版本Tronclass平台。",
    "version": "2.0.0",
    "manifest_version": 3,
    "action": {
        "default_icon": {
            "16": "/img/icon16.png",
            "24": "/img/icon24.png",
            "32": "/img/icon32.png",
            "48": "/img/icon48.png",
            "128": "/img/icon128.png"
        },
        "default_title": "請先開啟教材頁面再點我"
    },
    "icons": {
        "16": "/img/icon16.png",
        "24": "/img/icon24.png",
        "32": "/img/icon32.png",
        "48": "/img/icon48.png",
        "128": "/img/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "contextMenus",
        "downloads"
    ]
}